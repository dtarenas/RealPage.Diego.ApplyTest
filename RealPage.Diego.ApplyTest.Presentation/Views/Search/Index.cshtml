@model IEnumerable<RealPage.Diego.ApplyTest.Core.DTOs.Resquests.TvMaze.Shows.SearchDTO>

<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h3>Shows Results</h3>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="table-responsive">
            <table class="table table-striped" width="100" cellspacing="0" id="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Score</th>
                        <th>Language</th>
                        <th>Genre</th>
                        <th>Channel</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var show in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => show.Show.Name)</td>
                            <td>@Html.DisplayFor(modelItem => show.Score)</td>
                            <td>@Html.DisplayFor(modelItem => show.Show.Language)</td>
                            <td>
                                @foreach (var item in show.Show.Genres)
                                {
                                    <div>@item</div>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => show.Show.WebChannel.Name)</td>
                            <td><a class="btn btn-outline-warning" href="#" onclick="DetailsElements(@show.Show.Id, 'Search')"><i class="fas fa-align-justify"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr>
    </div>
</div>
